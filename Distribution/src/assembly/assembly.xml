            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>FtpServer</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../HBase/target/hbase-1.5.0</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>HBase</outputDirectory>
        </fileSet>
        <!--项目公共脚本-->
        <fileSet>
            <directory>${project.basedir}/bin</directory>
            <includes>
                <include>**</include>
            </includes>
            <fileMode>0755</fileMode>
            <outputDirectory>Common/bin</outputDirectory>
        </fileSet>
        <!--项目jar包-->
        <fileSet>
            <directory>../Cluster/target</directory>
            <includes>
                <include>streaming-1.5.0.jar</include>
            </includes>
            <outputDirectory>Common/lib</outputDirectory>
