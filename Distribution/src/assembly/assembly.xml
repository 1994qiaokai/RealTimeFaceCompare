<assembly>
    <id>all</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>
    <fileSets>
        <!--项目README 文件-->
        <fileSet>
            <directory>../</directory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
        <!--项目模块-->
        <fileSet>
            <directory>../Cluster/target/streaming-1.5.0</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>Cluster</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../Dubbo/target/bigdata-api-1.5.0</directory>
