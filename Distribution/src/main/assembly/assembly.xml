<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>all</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>
    <fileSets>
        <!--Distribution 下的conf 和bin 目录内容-->
        <fileSet>
            <includes>
                <include>bin/*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <includes>
                <include>conf/**</include>
            </includes>
        </fileSet>

        <!--项目README 文件-->
        <fileSet>
            <directory>../</directory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>

        <!--Dubbo 模块conf 文件-->
        <fileSet>
            <directory>../Dubbo/src/main/resources/</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>\conf</outputDirectory>
        </fileSet>

        <!-- FtpServer 模块conf文件-->
        <fileSet>
            <directory>../FtpServer/src/main/resources/</directory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>spring-context.xml</exclude>
            </excludes>
            <outputDirectory>\conf</outputDirectory>
        </fileSet>

        <!-- HBase 模块conf文件-->
        <fileSet>
            <directory>../HBase/src/main/resources/</directory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>spring-context.xml</exclude>
                <exclude>sql/</exclude>
            </excludes>
            <outputDirectory>\conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../HBase/src/main/resources/</directory>
            <includes>
                <include>sql/**</include>
            </includes>
            <excludes>
                <exclude>spring-context.xml</exclude>
            </excludes>
            <outputDirectory>\</outputDirectory>
        </fileSet>
        <!-- JNI 模块conf文件-->
        <fileSet>
            <directory>../JNI/src/main/resources/</directory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>spring-context.xml</exclude>
            </excludes>
            <outputDirectory>\conf</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>../HBase2Es/src/main/resources</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>\conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../HBase2Es/target</directory>
            <includes>
                <include>hbase2es-1.0-jar-with-dependencies.jar</include>
            </includes>
            <outputDirectory>\lib</outputDirectory>
        </fileSet>
        <!-- Kafka 模块conf文件-->
        <fileSet>
            <directory>../Kafka/src/main/resources/</directory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>spring-context.xml</exclude>
            </excludes>
            <outputDirectory>\conf</outputDirectory>
        </fileSet>

        <!-- RocketMQ 模块conf文件-->
        <fileSet>
            <directory>../RocketMQ/src/main/resources</directory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>spring-context.xml</exclude>
            </excludes>
            <outputDirectory>\conf</outputDirectory>
        </fileSet>

        <!-- Spark_Streming 模块conf文件-->
        <fileSet>
            <directory>../Spark_Streaming/src/main/resources/</directory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>spring-context.xml</exclude>
            </excludes>
            <outputDirectory>\conf</outputDirectory>
        </fileSet>
    </fileSets>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.hzgc:bigdata-api</include>
                <include>com.hzgc:ftp</include>
                <include>com.hzgc:hbase</include>
                <include>com.hzgc:jni</include>
                <include>com.hzgc:kafka</include>
                <include>com.hzgc:rocketmq</include>
                <include>com.hzgc:streaming</include>
                <include>com.hzgc:util</include>
            </includes>

            <binaries>
                <outputDirectory>lib/</outputDirectory>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>lib/</outputDirectory>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>